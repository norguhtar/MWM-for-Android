<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true" >

	<ImageView android:id="@+id/other_apps_list_item_icon"
		android:layout_width="48dp"
		android:layout_height="54dp"
		android:layout_marginRight="6dip"
		android:src="@drawable/icon" />
	<TextView
	    android:id="@+id/other_apps_list_item_name"
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
	    android:layout_weight="0.66"
	    android:gravity="center_vertical"
	    android:text="@string/app_name" />

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="10dp" >
	        
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:text="@string/other_apps_app_enable" />
		    
		<CheckBox android:id="@+id/other_apps_list_item_check"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		
	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="10dp"
	    android:orientation="vertical" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="@string/other_apps_vibrate_label" />
	    <Button
	        android:id="@+id/other_apps_list_item_buzzes"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/other_apps_vibration_default_abbr" />

	</LinearLayout>
</LinearLayout>
