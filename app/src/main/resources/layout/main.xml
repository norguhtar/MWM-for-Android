<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <Button android:id="@+id/startButton" android:text="@string/request_service_start" android:textSize="15sp" android:layout_width="match_parent" android:layout_height="wrap_content" /> 
    <Button android:id="@+id/shutdownButton" android:text="@string/request_service_shutdown" android:textSize="15sp" android:layout_width="match_parent" android:layout_height="wrap_content" /> 
    <Button android:id="@+id/statistics" android:textSize="15sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/statistics"/>  
</LinearLayout>
